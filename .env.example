# PostgreSQL
POSTGRES_USER=tuisoj
POSTGRES_PASSWORD=tuisoj
POSTGRES_DB=tuisoj
POSTGRES_URL=postgres://tuisoj:tuisoj@db:5432/tuisoj?sslmode=disable
DATABASE_URL=postgres://tuisoj:tuisoj@db:5432/tuisoj?sslmode=disable

# Redis
REDIS_URL=redis://redis:6379/0

# go-judge
GOJUDGE_URL=http://go-judge:5050
GOJUDGE_PARALLELISM=4

# Worker
WORKER_CONCURRENCY=4

# Session / CSRF (MUST change in production)
