# PostgreSQL
POSTGRES_USER=tuisoj
POSTGRES_PASSWORD=change-this-postgres-password
POSTGRES_DB=tuisoj
POSTGRES_PORT=5432
POSTGRES_URL=postgres://tuisoj:change-this-postgres-password@db:5432/tuisoj?sslmode=disable
# DATABASE_URL を使う場合はこちらを優先（未使用なら空のまま）
DATABASE_URL=

# Redis / Judge
REDIS_URL=redis://redis:6379/0
GOJUDGE_URL=http://go-judge:5050

# セッション / CSRF（本番では長いランダム文字列に必ず変更）
SESSION_KEY=change-this-session-key-prod
CSRF_SECRET=change-this-csrf-secret-prod
COOKIE_SECURE=true
COOKIE_SAMESITE=Strict

# ストレージ
SUBMISSION_DIR=/app/submission-files

# CORS / CSRF Origin
ALLOWED_ORIGINS=https://your.domain

# API ポート
PORT=3000

# 管理者初期化
INITIAL_ADMIN_PASSWORD_PATH=/run/oj-secrets/initial_admin_password.secret
BOOTSTRAP_ADMIN=true
